    <div class="col-md-6">
      <div class="card login-form px-5 py-5" id="form1">
        <div class="form-data" v-if="!submitted">
          <div class="forms-inputs mb-4"> <span class="spans">Email </span> <input autocomplete="off" type="text"
              v-model="email" v-bind:class="{'form-control':true, 'is-invalid' : !validEmail(email) && emailBlured}"
              v-on:blur="emailBlured = true" id="emailInput">
            <small id="invalidEmail">Το email πρέπει να είναι της μορφής info@example.com!</small>
          </div>
          <div class="forms-inputs mb-4"> <span class="spans">Κωδικός</span> <input autocomplete="off" type="password"
              v-model="password"
              v-bind:class="{'form-control':true, 'is-invalid' : !validPassword(password) && passwordBlured}"
              v-on:blur="passwordBlured = true" id="passwordInput">
            <small id="invalidPassword">Ο κωδικός πρέπει να έχει τουλάχιστον 8 χαρακτήρες!</small> 
          </div>
          <div class="mb-3"> <button v-on:click.stop.prevent="submit" class="btn log-btn w-100" onclick="inputsValidator(event)">Σύνδεση</button> </div>
        </div>
