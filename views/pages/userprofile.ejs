<div id="main" class="px-4">
  <div class="container-xl px-4 mt-4">

    <div class="row">

      <div class="col-xl-4 col-md-4">
        <!-- Profile picture card-->
        <div class="card mb-4 mb-xl-0">
          <!-- <div class="card-header">Profile Picture</div> -->
          <div class="card-body text-center">
            <!-- Profile picture image-->
            <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png"
              alt="">
            <!-- Profile picture help block-->
            <div class="small font-italic text-muted mb-4" onclick="displayContent(editCard)"> <a href="#"
                >Επεξεργασία προφίλ</a> </div>
            <!-- JPG or PNG no larger than 5 MB -->
            <p onclick="displayContent(profileCard)"> <a href="#"><%= user.firstName + " " + user.lastName %></a> </p>
            <!-- Profile picture upload button-->

            <br>
            <button class="btn btn-dark btnProf mt-2" type="button">Έχει προσφέρει</button>
            <br>
            <button class="btn btn-dark btnProf mt-2" type="button">Έχει δεχθεί</button>
            <br>
            <button class="btn btn-dark btnProf mt-2" type="button">Σχόλια</button>
            <br>
            <button class="btn btn-dark btnProf mt-2" type="button">Μηνύματα</button>
          </div>
        </div>
      </div>
      <div class="col-xl-8">
        <!-- Account details card-->
        <div class="card mb-4 content" id="editCard">
          <div id="editform" >
            <div class="p-3 py-5">
              <form action="/updateuser" method="POST">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h4 class="text-right">Επεξεργασία Προφίλ</h4>
                </div>
                <div class="row mt-2">
                  <div class="col-md-6">
                    <label class="labels">Όνομα:</label>
                    <input type="text" class="form-control"
                      placeholder="Ονομα" name="firstName" value=<%=user.firstName %>  >
                  </div>
                  <div class="col-md-6">
                    <label class="labels">Επώνυμο:</label>
                    <input type="text"  class="form-control" placeholder="Επώνυμο" name="lastName"
                      value=<%=user.lastName %> >
                  </div>
                </div>
                <div class="row mt-3">
                  <div class="col-md-12">
                    <label class="labels">Email:</label>
                    <input type="text" class="form-control" placeholder="Email" name="email" id="regEmail" value=<%=user.email %>>
                    <!-- <small id="emailValidation">*Παρακαλούμε εισάγετε έγκυρη διεύθυνση email.</small> -->
                  </div>
                  <div class="col-md-12 mt-3">
                    <label value="Male" class="labels mb-1">Φύλο:</label>
                    <!-- male -->
                    <label class="container" for="male">Άνδρας <input type="radio" name="gender" id="male" value="Male"
                        <%=user.gender==='Male' ? 'checked' : '' %> onclick="hideGenderValidation();">
                      <span class="checkmark"></span>
                    </label>
                    <!-- female -->
                    <label class="container" for="female"> Γυναίκα <input type="radio" name="gender" id="female"
                        value="Female" onclick="hideGenderValidation();" <%=user.gender==='Female' ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <!-- other -->
                    <label class="container" for="other">Άλλο <input type="radio" name="gender" id="other"
                        value="Non-Binary" onclick="hideGenderValidation();" <%=user.gender==='Non-Binary' ? 'checked'
                        : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <!-- <small id="genderValidation">*Παρακαλούμε εισάγετε το φύλο σας.</small> -->
                  </div>
                  <div class="col-md-12">
                    <label class="labels">Ημερομηνία Γέννησης:</label>
                    <input type="date" class="form-control" name="dateOfBirth" id="regDateOfBirth"
                       placeholder="Ημερομηνία Γέννησης:">
                  </div>
                  <!-- όταν φτιαχτεί στην βάση true false -->
                  <div class="col-md-12 mt-3">
                    <label class="labels">Διεύθυνση Κατοικίας</label>
                    <label class="container">Ναι <input id="addressYes" type="radio" name="radioAddress"
                        value="addressYes" onclick="displayAddress();">
                      <span class="checkmark"></span>
                    </label>
                    <label class="container"> Όχι <input id="addressNo" type="radio" name="radioAddress"
                        value="addressNo" onclick="displayAddress();">
                      <span class="checkmark"></span>
                    </label>
                    <input type="text" class="form-control" placeholder="Διεύθυνση Κατοικίας"
                      value="<%= user.address %>" id="regAddress" name="address">
                  </div>
                  <div class="col-md-12 mt-3">
                    <label class="labels">Προσθέστε φωτογραφία :</label>
                    <input type="file" class="form-control-file" id="regProfileImg" name="photo">
                  </div>
                  <div class="col-12 mt-3">
                    <label for="regSmallBio" value="description" class="labels">Λίγα λόγια για εμένα:</label>
                    <textarea class="form-control" name="description" id="regSmallBio"
                      rows="5"><%= user.description %></textarea>
                  </div>
                  <div class="col-12">
                    <p>Αυτό το διάστημα έχετε μόνιμη εργασία:</p>
                    <label class="container">
                      Ναι<input type="radio" checked="checked" name="employeed" id="workYes" value="true"
                        <%=user.employeed===true ? 'checked' : '' %> >
                      <span class="checkmark"></span>
                    </label>
                    <label class="container"> Οχι<input type="radio" name="employeed" id="workNo" value="false"
                        <%=user.employeed===false ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <p>Υπάρχει κάποια μορφή αναπηρίας:</p>
                    <label class="container">
                      Ναι<input type="radio" checked="checked" name="disabled" id="disabledYes" value="true"
                        <%=user.disabled===true ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <label class="container">
                      Οχι<input type="radio" name="disabled" id="disabledNo" value="false" <%=user.disabled===false
                        ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>

                    <p>Έχετε ασχοληθεί στο παρελθόν ξανά με εθελοντισμό:</p>
                    <label class="container">
                      Ναι<input type="radio" checked="checked" name="volunteer" id="voluntarismYes" value="true"
                        <%=user.volunteer===true ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <label class="container">
                      Οχι<input type="radio" name="volunteer" id="voluntarismNo" value="false" <%=user.volunteer===false
                        ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <p>Πόσο ελεύθερο χρόνο διαθέτετε μέσα στη βδομάδα για εθελοντικές δράσεις:</p>
                    <label class="container">
                      Καθόλου<input type="radio" checked="checked" name="freeTime" id="freeTimeNone"
                        value="freeTimeNone" <%=user.freeTime==='freeTimeNone' ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <label class="container">
                      Ελάχιστο χρόνο<input type="radio" name="freeTime" id="freeTimeMinimum" value="freeTimeMinimum"
                        <%=user.freeTime==='freeTimeMinimum' ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <label class="container">
                      Κυρίως τα σαββατοκύριακα<input type="radio" name="freeTime" id="freeTimeWeekend"
                        value="freeTimeWeekend" <%=user.freeTime==='freeTimeWeekend' ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                    <label class="container">
                      Μερικές μέρες της εβδομάδας<input type="radio" name="freeTime" id="freeTimeSome"
                        value="freeTimeSome" <%=user.freeTime==='freeTimeSome' ? 'checked' : '' %>>
                      <span class="checkmark"></span>
                    </label>
                  </div>
                  <div class="col-md-12">
                    <div class="mt-5 text-center"><button class="editBtn btn btn-danger profile-button"
                        type="submit">Αποθήκευση
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Θέση για τη φόρμα edit που θα ολοκληρώσει ο Δημήτρης -->

        <!-- User's Profile card  -->
        <div class="card mb-4 content" id="profileCard">

          <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
              <li class="nav-link active">
                <%= user.firstName + " " + user.lastName %>
              </li>
            </ul>
          </div>

          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h5 class="card-title">Βασικές πληροφορίες:</h5>
                <hr>
                <br>
                <div class="row pt-2">
                  <div class="col-lg-4">Ηλικία:</div>
                  <div class="col-lg-8" id="cardAge"></div>
                </div>

                <div class="row pt-2">
                  <div class="col-lg-4">Φύλο:</div>
                  <div class="col-lg-8" id="cardGender"></div>
                </div>

                <div class="row pt-2 pb-3">
                  <div class="col-lg-4">Email:</div>
                  <div class="col-lg-8">
                    <%= user.email %>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <h5 class="card-title">Περιγραφή:</h5>
                <hr>
                <br>
                <p>
                  <%= user.description %>
                </p>
              </div>

            </div>

          </div>
        </div>
        <!-- User's Profile card  -->

      </div>

    </div>
  </div>
</div>

<script>
  // get the users gender from the controller
  let gender = '<%= user.gender %>';

  // get the users date of birth from the controller
  let dateOfBirth = '<%= user.dateOfBirth %>';

</script>
