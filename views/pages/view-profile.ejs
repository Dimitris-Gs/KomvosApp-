<div id="main" class="px-4">
  <div class="container-xl px-4 mt-4">

    <div class="row">
      <!-- Κάρτα μενού -->
      <div class="col-xl-4 col-md-4">
        <!-- Profile picture card-->
        <div class="card mb-4 mb-xl-0">
          <!-- <div class="card-header">Profile Picture</div> -->
          <div class="card-body text-center" id="regularMenu">
            <!-- Profile picture image-->
            <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png"
              alt="">
            <!-- JPG or PNG no larger than 5 MB -->
            <p onclick="displayContent(profileCard)"> <a href="#">
                <%= user.firstName + " " + user.lastName %>
              </a> </p>
            <!-- Profile picture upload button-->


            <br>
            <button class="btn btn-dark btnProf mt-2" onclick="toggleCard()" type="button">Προφίλ</button>
            <br>
            <form action=<%= '/chat/' + user.id%> method="GET">
              <button class="btn btn-dark btnProf mt-2" type="submit">Στείλε Μήνυμα</button>
            </form>
          </div>

          <!-- less than 768 version -->
          <div class="card-body text-center" id="smallMenu">
            <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png"
              alt="">
            <div class="" onclick="displayContent(editCard)"> Επεξεργασία
              προφίλ </div>
            <p onclick="displayContent(profileCard)"> Username </p>

            
          </div>
          <!-- less than 768 version -->

        </div>
      </div>
      <!-- Φόρμα επεξεργασίας προφίλ -->
      <div class="col-xl-8 col-md-8">
        <!-- User's Profile card  -->
        <div class="card mb-4 content" id="profileCard">

          <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
              <li class="nav-link active">
                <%= user.firstName + " " + user.lastName %>
              </li>
            </ul>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h5 class="card-title">Πληροφορίες:</h5>
                <hr>

                <div class="row pt-2">
                  <div class="col-lg-4">Ηλικία:</div>
                  <div class="col-lg-8" id="cardAge">
                  </div>
                </div>

                <div class="row pt-2">
                  <div class="col-lg-4">Φύλο:</div>
                  <div class="col-lg-8" id="cardGender">
                  </div>
                </div>

                <div class="row pt-2">
                  <div class="col-lg-4">Email:</div>
                  <div class="col-lg-8">
                    <%= user.email %>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <h5 class="card-title">Περιγραφή:</h5>
                <hr>

                <p>
                  <%= user.description %>
                </p>
              </div>

            </div>

          </div>
        </div>
        <!-- User's Profile card  -->

       

      </div>
    </div>
  </div>
